@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>-=X=-</title>
    <meta name="viewport" content="width=device-width" />

    <link href='http://fonts.googleapis.com/css?family=Dosis:800' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/Content/Site.css">

    <!--[if lt IE 9]>
        <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <script>window.html5 || document.write('<script src="js/vendor/html5shiv.js"><\/script>')</script>
    <![endif]-->
</head>
<body>

    <div class="wrap">

        <header>
            <h1>THINK SPRINTS</h1>
        </header>

        <div class="track">

            <div class="player player-1 rest position-0">
            </div>

        </div>

        <div class="track track-2">

            <div class="player player-2 rest position-0">
            </div>

        </div>

        <div id="currentPlayer"></div>

        <div id="result"></div>

        <div class="q-a">

            <div class="question">
                <div id="question"></div>
                <div class="equals">=</div>
            </div>


            <div class="answers">
                <button id="answer1" onclick="SendAnswer(0);"></button>
                <button id="answer2" onclick="SendAnswer(1);"></button>
                <button id="answer3" onclick="SendAnswer(2);"></button>
                <button id="answer4" onclick="SendAnswer(3);"></button>
            </div>

        </div>
        <!-- end .q-a -->

        <button id="resetGame" onclick="ResetGame();">Reset Game</button>

        <div class="container">
            <input type="text" id="message" />
            <input type="button" id="sendmessage" value="Send" />
            <input type="hidden" id="displayname" />
            <ul id="discussion">
            </ul>
        </div>
    </div>

    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="~/Scripts/jquery-1.6.4.js"></script>
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-1.0.1.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">
        function SendAnswer(index) {
            if (!gameOver) {
                chat.server.sendAnswer($('#displayname').val(), index);
            }
        }

        function ResetGame() {

            if (!gameOver)
                return;

            chat.server.resetGame();
        }

        function onGameReset() {


            $('.player-1').removeClass("position-1");
            $('.player-1').removeClass("position-2");
            $('.player-1').removeClass("position-3");
            $('.player-1').removeClass("position-4");
            $('.player-1').removeClass("position-5");
            $('.player-1').removeClass("position-6");
            $('.player-1').removeClass("run");
            $('.player-1').removeClass("jump");
            $('.player-1').addClass("rest");
            $('.player-1').addClass("position-0");

            $('.player-2').removeClass("position-1");
            $('.player-2').removeClass("position-2");
            $('.player-2').removeClass("position-3");
            $('.player-2').removeClass("position-4");
            $('.player-2').removeClass("position-5");
            $('.player-2').removeClass("position-6");
            $('.player-2').removeClass("run");
            $('.player-2').removeClass("jump");
            $('.player-2').addClass("rest");
            $('.player-2').addClass("position-0");

            player1Score = 0;
            player2Score = 0;
            gameOver = false;

        }
        var player1Score = 0;
        var player2Score = 0;
        var gameOver = false;

        var chat;
        $(function () {
            // Declare a proxy to reference the hub. 
            chat = $.connection.chatHub;
            // Create a function that the hub can call to broadcast messages.

            chat.client.recieveQuestion = function (name, question) {
                $('#question').text(question.Text);
                $('#answer1').text(question.Options[0]);
                $('#answer2').text(question.Options[1]);
                $('#answer3').text(question.Options[2]);
                $('#answer4').text(question.Options[3]);
                $('#currentPlayer').text(name);

                if (name == $('#displayname').val()) {
                    $('.answers').removeClass('disabled');
                } else {
                    $('.answers').addClass('disabled');
                }
            };

            chat.client.onGameReset = onGameReset;

            chat.client.recieveResult = function (result) {
                if (result.Correct) {
                    $('#result').addClass("correct");
                    $('#result').removeClass("wrong");
                } else {
                    $('#result').removeClass("correct");
                    $('#result').addClass("wrong");
                }
                $('#player1Score').text(result.Players[0].Score);
                //   $('#player2Score').text(result.Players[1].Score);

                if (result.Players[0].Score != player1Score) {
                    player1Score = result.Players[0].Score;
                    IncrimentPlayer1();
                }

                if (result.Players[1].Score != player2Score) {
                    player2Score = result.Players[1].Score;
                    IncrimentPlayer2();
                }
            };


            function IncrimentPlayer1() {
                $('.player-1').removeClass("position-1");
                $('.player-1').removeClass("position-2");
                $('.player-1').removeClass("position-3");
                $('.player-1').removeClass("position-4");
                $('.player-1').removeClass("position-5");
                $('.player-1').removeClass("position-6");
                $('.player-1').removeClass("rest");
                $('.player-1').addClass("run");
                $('.player-1').addClass("position-" + player1Score);
                window.setTimeout(function () { $('.player-1').removeClass("run"); }, 2000);
                window.setTimeout(function () {
                    $('.player-1').addClass("rest");
                    CheckPlayer1Win();
                }, 2000);
            }

            function CheckPlayer1Win() {
                if (player1Score == 6) {
                    gameOver = true;
                    $('.player-1').removeClass("rest");
                    $('.player-1').addClass("jump");
                }
            }

            function IncrimentPlayer2() {
                $('.player-2').removeClass("position-1");
                $('.player-2').removeClass("position-2");
                $('.player-2').removeClass("position-3");
                $('.player-2').removeClass("position-4");
                $('.player-2').removeClass("position-5");
                $('.player-2').removeClass("position-6");
                $('.player-2').removeClass("rest");
                $('.player-2').addClass("run");
                $('.player-2').addClass("position-" + player2Score);
                window.setTimeout(function () { $('.player-2').removeClass("run"); }, 2000);
                window.setTimeout(function () {
                    $('.player-2').addClass("rest");
                    CheckPlayer2Win();
                }, 2000);
            }

            function CheckPlayer2Win() {
                if (player2Score == 6) {
                    gameOver = true;
                    $('.player-2').removeClass("rest");
                    $('.player-2').addClass("jump");
                }
            };

            chat.client.broadcastMessage = function (name, message) {
                // Html encode display name and message. 
                var encodedName = $('<div />').text(name).html();
                var encodedMsg = $('<div />').text(message).html();
                // Add the message to the page. 
                $('#discussion').append('<li><strong>' + encodedName
                    + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.  
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                chat.server.register($('#displayname').val());



                $('#sendmessage').click(function () {
                    // Call the Send method on the hub. 
                    chat.server.send($('#displayname').val(), $('#message').val());
                    // Clear text box and reset focus for next comment. 
                    $('#message').val('').focus();
                });
            });

        });
    </script>
</body>
</html>
